body {
  background: rgb(220,166,254);
  background: linear-gradient(33deg, rgba(220,166,254,1) 0%, rgba(253,242,255,1) 49%, rgba(111,195,254,1) 100%) fixed;
  color: #3c0648;
  font-family: 'Finlandica', sans-serif;
}

h1 {
  font-family: 'Calistoga', cursive;
}

.signup p {
  margin-bottom: 0;
}

#mc_embed_signup {
  background: transparent;
  clear: left;
  font-family: 'Finlandica', sans-serif;
  margin: 0 auto;
}

#mc_embed_signup form {
  margin: 0 !important;
}

#mc_embed_signup .indicates-required {
  display: none;
}

#mc_embed_signup .helper_text {
  background: transparent !important;
}

#mc_embed_signup .foot,
#mc_embed_signup .mc-field-group {
  width: 100% !important;
}